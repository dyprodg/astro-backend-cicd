---
interface Props {
  car: {
    id: number;
    title: string;
    price_chf: number;
    leasing_text: string;
    image_urls: string[];
  };
  index: number;
}

const { car, index } = Astro.props;
const firstImage = car.image_urls?.[0] || '/placeholder-car.svg';
---

<div 
  class="car-card" 
  style={`animation-delay: ${index * 0.1}s`}
>
  <div class="car-image">
    <img 
      src={firstImage} 
      alt={car.title}
      loading="lazy"
    />
  </div>
  
  <div class="car-info">
    <h3 class="car-title">{car.title}</h3>
    <div class="car-pricing">
      <div class="car-price">CHF {car.price_chf.toLocaleString()}</div>
      <div class="car-leasing">{car.leasing_text}</div>
    </div>
  </div>
</div>

<style>
  .car-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.6s ease forwards;
    cursor: pointer;
  }
  
  .car-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .car-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: #f3f4f6;
  }
  
  .car-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .car-card:hover .car-image img {
    transform: scale(1.05);
  }
  
  .car-info {
    padding: 1.25rem;
  }
  
  .car-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .car-pricing {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .car-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #059669;
  }
  
  .car-leasing {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .car-info {
      padding: 1rem;
    }
    
    .car-title {
      font-size: 1rem;
    }
    
    .car-price {
      font-size: 1.125rem;
    }
  }
</style> 