---
// Hero component
import AutosalonLogo from '/autosalon-only.svg?raw';
import AutosalonText from '/autosalon-vol.svg?raw';
---

<section class="bg-primary">
  <div
    class="px-8 2xl:max-w-7xl mx-auto pt-12"
    data-aos="fade-up"
    data-aos-duration="2000">
    <div class="text-8xl md:text-9xl font-bold tracking-tight [&_svg]:w-full [&_svg]:h-auto [&_svg_path]:fill-secondary">
      <Fragment set:html={AutosalonLogo} />
    </div>
  </div>
  <div class="px-8 2xl:max-w-7xl mx-auto pb-12">
    <div class="mt-6 space-y-2">
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000">
      </div>
      <div
        class="flex flex-col sm:flex-row gap-3 justify-between lg:items-center"
        data-aos="fade-up"
        data-aos-duration="1500">
        <div class="flex gap-3 items-center">
          <h3 class="text-secondary text-xs font-medium">
            <span>Unabhängiger Autohändler</span>
            <span class="font-bold mx-1">·</span>
            <span class="italic">Verkauf und Ankauf</span>
            <span class="font-bold mx-1">·</span>
            <span>100% Tiefpreisgarantie</span>
          </h3>
          <span class="h-auto border-secondary border"></span>
        </div>
        <div>
          <ul class="lg:items-center flex justify-between w-full gap-3 relative text-xs">
            <li>
              <a
                href="#about"
                class="hover:text-secondary/80 text-secondary"
                >Über uns</a
              >
            </li>
            <li>
              <a
                href="#features"
                class="hover:text-secondary/80 text-secondary"
                >Leistungen</a
              >
            </li>
            <li>
              <a
                href="#search"
                class="hover:text-secondary/80 text-secondary"
                >Angebot</a
              >
            </li>
            <li>
              <a
                href="#search"
                class="hover:text-secondary/80 text-secondary"
                >Auto Verkaufen</a
              >
            </li>
            <li>
              <a
                href="#contact"
                class="hover:text-secondary/80 text-secondary"
                >Kontakt</a
              >
            </li>
          </ul>
        </div>
      </div>
      <div
        class="h-1.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="2000">
      </div>
      <div class="h-3 bg-secondary" data-aos="fade-up" data-aos-duration="2500">
      </div>
      <div class="h-6 bg-secondary" data-aos="fade-up" data-aos-duration="3000">
      </div>
      <div
        class="h-12 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="3000">
      </div>
      <div
        class="h-24 bg-secondary flex items-end justify-end p-4"
        data-aos="fade-up"
        data-aos-duration="3000"
        data-aos-delay="150">
        <div class="text-8xl md:text-9xl font-bold tracking-tight [&_svg]:w-full [&_svg]:h-auto [&_svg_path]:fill-primary">
          <Fragment set:html={AutosalonText} />
        </div>
      </div>
    </div>
  </div>
</section> 