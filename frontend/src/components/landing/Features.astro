---
// Auto Salon Features component
import BlurImage from '../lib/BlurImage.astro';
---

<section id="features" class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-24">
    <!-- Header Text -->
    <div data-aos="fade-up" data-aos-duration="1000">
      <h2 class="text-secondary text-4xl md:text-5xl font-bold mb-6 text-center">
        Unsere Leistungen
      </h2>
      <p class="text-secondary/80 text-xl md:text-2xl text-center mb-16 font-medium">
        Die tiefsten Preise der Schweiz für erschwinglichen Fahrspass
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-24">
      <!-- Feature 1: Auto verkaufen -->
      <div 
        class="relative overflow-hidden group border-2 border-secondary/20 hover:border-secondary/40 transition-all duration-300"
        data-aos="fade-up" 
        data-aos-duration="1000"
        data-aos-delay="0">
        <!-- Background Image -->
        <div class="absolute inset-0">
          <BlurImage 
            src="/cars/e190hoch.jpg"
            lowResSrc="/cars/e190hochSmall.jpeg"
            alt="Auto verkaufen"
          />
          <div class="absolute inset-0 bg-black/70 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <!-- Content -->
        <div class="relative z-10 p-10 h-[28rem] md:h-[36rem] flex flex-col justify-end">
          <div class="h-14 w-14 bg-secondary border-2 border-secondary mb-8 flex items-center justify-center">
            <svg class="w-7 h-7 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-6">Auto verkaufen</h3>
          <p class="text-white/90 text-lg md:text-xl leading-relaxed">
            Auto verkaufen in nur 3 Schritten!<br />
            Lass dein Auto Bewerten
          </p>
        </div>
      </div>

      <!-- Feature 2: Auto Kaufen-->
      <div 
        class="relative overflow-hidden group border-2 border-secondary/20 hover:border-secondary/40 transition-all duration-300"
        data-aos="fade-up" 
        data-aos-duration="1000"
        data-aos-delay="200">
        <!-- Background Image -->
        <div class="absolute inset-0">
          <BlurImage 
            src="/cars/e190h.jpg"
            lowResSrc="/cars/e190hSmall.jpeg"
            alt="Auto vermitteln"
          />
          <div class="absolute inset-0 bg-black/70 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <!-- Content -->
        <div class="relative z-10 p-10 h-[28rem] md:h-[36rem] flex flex-col justify-end">
          <div class="h-14 w-14 bg-secondary border-2 border-secondary mb-8 flex items-center justify-center">
            <svg class="w-7 h-7 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-6">Auto Kaufen</h3>
          <p class="text-white/90 text-lg md:text-xl leading-relaxed">
            Auto Kaufen - risikofrei & schnell zur besten Qualität!<br />
          </p>
        </div>
      </div>

      <!-- Feature 3: Auto Salon Team -->
      <div 
        class="relative overflow-hidden group border-2 border-secondary/20 hover:border-secondary/40 transition-all duration-300"
        data-aos="fade-up" 
        data-aos-duration="1000"
        data-aos-delay="400">
        <!-- Background Image -->
        <div class="absolute inset-0">
          <BlurImage 
            src="/cars/e190quer.jpg"
            lowResSrc="/cars/e190querSmall.jpeg"
            alt="Auto Salon Team"
          />
          <div class="absolute inset-0 bg-black/70 group-hover:bg-black/60 transition-colors duration-300"></div>
        </div>
        <!-- Content -->
        <div class="relative z-10 p-10 h-[28rem] md:h-[36rem] flex flex-col justify-end">
          <div class="h-14 w-14 bg-secondary border-2 border-secondary mb-8 flex items-center justify-center">
            <svg class="w-7 h-7 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 12.75c1.63 0 3.07.39 4.24.9a2.988 2.988 0 0 1 1.76 2.73V18H6v-1.61c0-1.18.68-2.26 1.76-2.73 1.17-.52 2.61-.91 4.24-.91zM4 13c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm1.13 1.1c-.37-.06-.74-.1-1.13-.1-.99 0-1.93.21-2.78.58A2.01 2.01 0 0 0 0 16.43V18h4.5v-1.61c0-.83.23-1.61.63-2.29zM20 13c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm2.78 1.58c-.85-.37-1.79-.58-2.78-.58-.39 0-.76.04-1.13.1.4.68.63 1.46.63 2.29V18H24v-1.57c0-.81-.48-1.53-1.22-1.85zM12 6c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3z"/>
            </svg>
          </div>
          <h3 class="text-white text-2xl md:text-3xl font-bold mb-6">Auto Salon Service</h3>
          <p class="text-white/90 text-lg md:text-xl leading-relaxed">
            Autoservice, Reparatur und Aufbereitung von Autos.
          </p>
        </div>
      </div>
    </div>

    <!-- Call to Action Section -->
    <div 
      class="relative overflow-hidden group border-2 border-secondary/20 hover:border-secondary/40 transition-all duration-300"
      data-aos="fade-up" 
      data-aos-duration="1000"
      data-aos-delay="600">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <BlurImage 
          src="/cars/lambo.jpg"
          lowResSrc="/cars/lamboSmall.jpeg"
          alt="Verkaufen mit Auto Salon"
        />
        <div class="absolute inset-0 bg-black/70 group-hover:bg-black/60 transition-colors duration-300"></div>
      </div>
      <!-- Content -->
      <div class="relative z-10 p-8 md:p-12">
        <div class="max-w-4xl mx-auto">
          <h3 class="text-white text-3xl md:text-4xl font-bold mb-8 text-center">
            Verkaufen mit Auto Salon
          </h3>
          <h4 class="text-white/90 text-xl md:text-2xl font-semibold mb-8 text-center">
            Ihre Vorteile
          </h4>
          
          <!-- Advantages Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">Direkter Ankauf aller Marken und Modelle</p>
            </div>
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">Ihren Verkaufspreis erhalten Sie innert 24h</p>
            </div>
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">Umgehende Bezahlung des Verkaufspreises</p>
            </div>
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">Unkompliziert und risikofrei</p>
            </div>
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">Abholung bei Ihnen Zuhause - ganz bequem!</p>
            </div>
            <div class="flex items-start space-x-4">
              <div class="h-6 w-6 bg-secondary mt-1 flex-shrink-0 border border-secondary"></div>
              <p class="text-white/90 text-lg">100% kostenloser Service</p>
            </div>
          </div>

          <!-- CTA Button -->
          <div class="text-center">
            <button 
              id="open-sell-modal"
              class="bg-secondary text-primary px-12 py-4 text-xl font-bold border-2 border-secondary hover:bg-primary hover:text-secondary hover:border-secondary transition-all duration-300 transform hover:scale-105">
              Verkauf Starten
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Sell Car Modal -->
<div 
  id="sell-modal" 
  class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 opacity-0 invisible transition-all duration-300">
  <div class="bg-primary border-2 border-secondary/30 max-w-2xl w-full max-h-[90vh] overflow-y-auto transform scale-95 transition-transform duration-300">
    <!-- Modal Header -->
    <div class="border-b border-secondary/20 p-6">
      <div class="flex items-center justify-between">
        <h3 class="text-secondary text-2xl md:text-3xl font-bold">Auto verkaufen</h3>
        <button 
          id="close-sell-modal"
          class="text-secondary/60 hover:text-secondary text-3xl font-bold transition-colors">
          ×
        </button>
      </div>
      <p class="text-secondary/70 mt-2">Füllen Sie das Formular aus und wir melden uns innerhalb von 24 Stunden bei Ihnen.</p>
    </div>

    <!-- Modal Body -->
    <div class="p-6">
      <form id="sell-car-form" class="space-y-6">
        <!-- Vehicle Information -->
        <div>
          <h4 class="text-secondary text-xl font-semibold mb-4">Fahrzeugdaten</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Marke -->
            <div>
              <label for="marke" class="block text-secondary font-medium mb-2">Marke *</label>
              <input 
                type="text" 
                id="marke" 
                name="marke" 
                required
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="z.B. BMW, Mercedes, Audi">
            </div>

            <!-- Modell -->
            <div>
              <label for="modell" class="block text-secondary font-medium mb-2">Modell *</label>
              <input 
                type="text" 
                id="modell" 
                name="modell" 
                required
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="z.B. 3er, C-Klasse, A4">
            </div>

            <!-- Baujahr -->
            <div>
              <label for="baujahr" class="block text-secondary font-medium mb-2">Baujahr *</label>
              <input 
                type="number" 
                id="baujahr" 
                name="baujahr" 
                required
                min="1980"
                max="2025"
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="z.B. 2020">
            </div>

            <!-- Kilometerstand -->
            <div>
              <label for="kilometerstand" class="block text-secondary font-medium mb-2">Kilometerstand *</label>
              <input 
                type="number" 
                id="kilometerstand" 
                name="kilometerstand" 
                required
                min="0"
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="z.B. 50000">
            </div>

            <!-- Gewünschter Preis -->
            <div>
              <label for="preis" class="block text-secondary font-medium mb-2">Gewünschter Preis (CHF)</label>
              <input 
                type="number" 
                id="preis" 
                name="preis" 
                min="0"
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="z.B. 25000">
            </div>

            <!-- Zustand -->
            <div>
              <label for="zustand" class="block text-secondary font-medium mb-2">Zustand *</label>
              <div class="relative">
                <select 
                  id="zustand" 
                  name="zustand" 
                  required
                  class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors appearance-none cursor-pointer">
                  <option value="">Bitte wählen</option>
                  <option value="sehr-gut">Sehr gut</option>
                  <option value="gut">Gut</option>
                  <option value="befriedigend">Befriedigend</option>
                  <option value="reparaturbedürftig">Reparaturbedürftig</option>
                </select>
                <!-- Custom Arrow -->
                <div class="absolute right-4 top-1/2 transform -translate-y-1/2 pointer-events-none">
                  <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div>
          <h4 class="text-secondary text-xl font-semibold mb-4">Kontaktdaten</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Name -->
            <div class="md:col-span-2">
              <label for="name" class="block text-secondary font-medium mb-2">Vollständiger Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="Vor- und Nachname">
            </div>

            <!-- Email -->
            <div class="md:col-span-2">
              <label for="email" class="block text-secondary font-medium mb-2">E-Mail Adresse *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border-2 border-secondary/20 bg-primary text-secondary focus:border-secondary/50 focus:outline-none transition-colors"
                placeholder="ihre.email@beispiel.ch">
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button 
            type="submit"
            class="w-full bg-secondary text-primary px-8 py-4 text-lg font-bold border-2 border-secondary hover:bg-primary hover:text-secondary hover:border-secondary transition-all duration-300">
            Anfrage senden
          </button>
          <p class="text-secondary/60 text-sm mt-2 text-center">
            * Pflichtfelder - Wir melden uns innerhalb von 24 Stunden bei Ihnen
          </p>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const openModalBtn = document.getElementById('open-sell-modal');
    const closeModalBtn = document.getElementById('close-sell-modal');
    const modal = document.getElementById('sell-modal');
    const form = document.getElementById('sell-car-form');
    
    if (!openModalBtn || !closeModalBtn || !modal || !form) return;

    // Open Modal
    openModalBtn.addEventListener('click', () => {
      modal.classList.remove('opacity-0', 'invisible');
      const modalContent = modal.querySelector('div');
      if (modalContent) {
        modalContent.classList.remove('scale-95');
        modalContent.classList.add('scale-100');
      }
      document.body.style.overflow = 'hidden';
    });

    // Close Modal Function
    const closeModal = () => {
      modal.classList.add('opacity-0', 'invisible');
      const modalContent = modal.querySelector('div');
      if (modalContent) {
        modalContent.classList.add('scale-95');
        modalContent.classList.remove('scale-100');
      }
      document.body.style.overflow = 'auto';
    };

    // Close Modal Events
    closeModalBtn.addEventListener('click', closeModal);
    
    // Close on overlay click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Close on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('invisible')) {
        closeModal();
      }
    });

    // Form Submit (placeholder - no actual functionality yet)
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      console.log('Form submitted - functionality to be implemented');
      // TODO: Add form submission logic later
      alert('Formular wurde gesendet! (Funktionalität wird später implementiert)');
      closeModal();
    });
  });
</script> 