---
// Props
const { src, lowResSrc, alt } = Astro.props;
---
<!-- OUTER DIV: AOS Fade-In + Fly-In -->
<div 
  class="aos-wrapper"
  data-aos="fade-up"
  data-aos-duration="2000"
  data-aos-delay="300"
>
  <!-- INNER DIV: Blur Effekt -->
  <div class="blur-wrapper">
    <img
      class="main-image lazy"
      src={lowResSrc}
      data-src={src}
      alt={alt}
      loading="lazy"
    />
  </div>
</div>

<style>
/* CONTROLLER: Outer wrapper f√ºr AOS */
.aos-wrapper {
  width: 100%;
  height: 100%;
}

/* CONTROLLER: Inner wrapper f√ºr Blur */
.blur-wrapper {
  position: relative;
  display: inline-block;
  overflow: hidden;
  cursor: pointer;
  width: 100%;
  height: 100%;
}

.main-image {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: scale(1.05);
  /* CONTROLLER: Startet mit Blur */
  filter: blur(25px);
  /* SUPER SMOOTH: Hardware-beschleunigt + langsamer ease */
  transition: filter 1s cubic-bezier(0.4, 0.0, 0.2, 1), transform 0.6s ease;
  will-change: filter, transform;
  backface-visibility: hidden;
}

/* CONTROLLER: Blur wird entfernt + Zoom zur√ºckgesetzt */
.main-image.sharp {
  filter: blur(0px);
  transform: scale(1);
}

/* HOVER EFFECTS: Zoom bei Hover */
.blur-wrapper:hover .main-image.sharp {
  transform: scale(1.1);
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const lazyImages = document.querySelectorAll("img.lazy");

    lazyImages.forEach((img) => {
      const src = img.getAttribute("data-src");
      if (!src) return;
      
      const imgElement = img as HTMLImageElement;
      
      // CONTROLLER: High-Res Bild preloaden
      const tempImg = new Image();
      tempImg.onload = () => {
        // High-Res ist geladen ‚Üí austauschen UND de-blurren
        imgElement.src = src;
        
        // CONTROLLER: Gleichzeitig blur entfernen UND zoom zur√ºcksetzen
        setTimeout(() => {
          imgElement.classList.add("sharp");
        }, 50); // Kleiner Delay f√ºr smooth transition
      };
      
      tempImg.onerror = () => {
        console.error("Failed to load image:", src);
      };
      
      tempImg.src = src;
    });
  });
</script>

